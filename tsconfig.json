{
    "compilerOptions": {
      "target": "es2020",
      "lib": ["ES6", "DOM"],
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "moduleResolution": "Node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "types": ["reflect-metadata"]
    },
    "include": [
      "src/**/*.ts",
      "config/*.ts",
      "core/***.ts"
    ],
    "exclude": ["node_modules"]
}